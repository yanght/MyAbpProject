@using Abp.Web.Mvc.Extensions
@section Scripts
{
    @Html.IncludeScript("/Views/Account/Login.js?v="+DateTime.Now.Ticks)
    @Html.IncludeScript("/content/js/cache.js")
}

<form class="layui-form" action="/account/login" method="post">
    <div class="login_face"><img src="/content/images/face.jpg" class="userAvatar"></div>
    <div class="layui-form-item input-item">
        <label for="UsernameOrEmailAddress">用户名</label>
        <input type="text" placeholder="请输入用户名" autocomplete="off" id="UsernameOrEmailAddress" class="layui-input" lay-verify="required" value="admin">
    </div>
    <div class="layui-form-item input-item">
        <label for="Password">密码</label>
        <input type="password" placeholder="请输入密码" autocomplete="off" id="Password" class="layui-input" lay-verify="required" value="123qwe">
    </div>
    <div class="layui-form-item input-item" id="imgCode">
        <label for="code">验证码</label>
        <input type="text" placeholder="请输入验证码" autocomplete="off" id="code" class="layui-input">
        <img src="/content/images/code.jpg">
    </div>
    <div class="layui-form-item">
        <button class="layui-btn layui-block" lay-filter="login" lay-submit>登录</button>
    </div>
    <div class="layui-form-item layui-row">
        <a href="javascript:;" class="seraph icon-qq layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
        <a href="javascript:;" class="seraph icon-wechat layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
        <a href="javascript:;" class="seraph icon-sina layui-col-xs4 layui-col-sm4 layui-col-md4 layui-col-lg4"></a>
    </div>
</form>
